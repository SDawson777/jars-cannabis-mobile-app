{
  "cli": { "version": ">= 12.0.0", "appVersionSource": "manifest" },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "android-preview": {
      "android": { "buildType": "apk" },
      "credentialsSource": "remote",
      "distribution": "internal"
    },
    "ios-simulator": {
      "ios": { "simulator": true },
      "distribution": "internal"
    },
    "production": {
      "android": { "buildType": "app-bundle" },
      "ios": {},
      "credentialsSource": "remote",
      "autoIncrement": true
    }
  },
  "submit": {
    "production": {
      "android": { "serviceAccountKeyPath": "./fastlane/google-service-account.json" },
      "ios": { "ascAppId": "REPLACE_AT_HANOFF" }
    }
  }
}
