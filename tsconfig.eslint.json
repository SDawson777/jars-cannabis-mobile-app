{
  "extends": "./tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "store/**/*.ts",
    "store/**/*.tsx",
    "stores/**/*.ts",
    "stores/**/*.tsx",
